@model Projem.Models.Departman.DepartmanBilgileri

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card mb-4">
        <h5 class="card-header">Departman Düzenle</h5>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DepartmanBilgileriId)

        <hr class="my-0">
        <div class="card-body">

            <div class="row">
                <div class="mb-3 col-md-6">
                    @Html.LabelFor(model => model.DepartmanAdi, htmlAttributes: new { @class = "control-label col-md-4" })
                    @Html.EditorFor(model => model.DepartmanAdi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DepartmanAdi, "", new { @class = "text-danger" })
                </div>
             
            </div>
            <a href="/DepartmanBilgileris/Index"><button type="button" class="btn rounded-pill btn-warning">Anasayfaya Dön</button></a>
            <input type="submit" value="Kaydet" class="btn rounded-pill btn-primary" />

        </div>

        <!-- /Account -->
    </div>



}








